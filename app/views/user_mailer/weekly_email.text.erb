<% @user.legislators.each do |leg| %>

  <%= leg.name %>

  <% if leg.five_recent_votes.any? %>
    <% leg.five_recent_votes.each do |vote| %>
      <%= "#{vote.vote_type}: #{vote.bill_id.upcase} #{vote.bill.official_title}" %>

    <% end %>
  <% else %>
    No recent votes
    
  <% end %>

<% end %>
